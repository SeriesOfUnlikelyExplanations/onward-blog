<% if (site.pages.length){ %>
  <div class="widget-wrap">
    <h3 class="widget-title"><%= __('pages') %></h3>
    <div class="widget">
      <ul class="pages-list" itemprop="keywords">
        <% site.pages.data.sort(function(a,b){
          if ( a.date < b.date ){
            return -1;
          }
          if ( a.date > b.date ){
            return 1;
          }
          return 0;
        }).forEach(function(page){ %>
          <% if (page.display){ %>
            <li>
              <a href="<%- url_for(page.path) %>"><%= page.title || '(no title)' %></a>
            </li>
          <% } %>
        <% }) %>
      </ul>
    </div>
  </div>
<% } %>
